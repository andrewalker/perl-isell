<!doctype html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8">
        <title>Visualizar venda - iSell</title>

        <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/static/css/style_admin.css">
    </head>
    <body>

        <div id="header">
            <div class="container">
                <div id="logo" class="pull-left">
                    <span class="lead">iSell</span>
                </div>
                <div id="user" class="pull-right">
                  <a href="/admin/logout" class="btn btn-danger"><span class="glyphicon glyphicon-off"></span> Logout</a>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div id="menu">
            <div class="container">

                <ul class="nav nav-pills">
                    <li><a href="/admin/">Vendas</a></li>
                    <li><a href="/admin/client/list">Clientes</a></li>
                    <li><a href="/admin/product/list">Produtos</a></li>
                </ul>

            </div>
        </div>

        <div id="content">
            <div class="container">

                <div class="page-title">
                    <h2 class="pull-left">Venda 1010 (Fulano de Tal)</h2>

                    <div class="pull-right">
                        <a href="add_client.html" class="btn btn-danger">Excluir</a>
                        <a href="#" class="btn btn-default">Imprimir</a>
                    </div>

                    <div class="clearfix"></div>
                </div>

                <hr>

                <div class="row">
                    <div class="col-md-6">

                        <div class="row">
                            <p class="lead">Resumo da Venda</p>

                            <div class="col-md-5">

                                <div class="row">
                                    <label class="col-sm-4 text-right">ID</label>
                                    <div class="col-sm-8">
                                        1010
                                    </div>
                                </div>

                                <div class="row">
                                    <label class="col-sm-4 text-right">Data</label>
                                    <div class="col-sm-8">
                                        21/11/2013
                                    </div>
                                </div>

                                <div class="row">
                                    <label class="col-sm-4 text-right">Status</label>
                                    <div class="col-sm-8">
                                        Em aberto
                                    </div>
                                </div>

                                <p>&nbsp;</p>

                                <strong>Endereço de Entrega</strong><br>
                                <address>Rua Teste, 123, São Carlos - SP</address>

                            </div>

                            <div class="col-md-7">

                                 <div class="row">
                                    <label class="col-sm-5 text-right">ID do Cliente</label>
                                    <div class="col-sm-7">
                                        (XX) 1234-5678
                                    </div>
                                </div>

                                <div class="row">
                                    <label class="col-sm-5 text-right">Nome</label>
                                    <div class="col-sm-7">
                                        Fulano de Tal
                                    </div>
                                </div>

                                <div class="row">
                                    <label class="col-sm-5 text-right">CPF</label>
                                    <div class="col-sm-7">
                                        123.456.789-10
                                    </div>
                                </div>

                                <p>&nbsp;</p>

                                <div class="row">
                                    <label class="col-sm-5 text-right">Telefone</label>
                                    <div class="col-sm-7">
                                        (xx) 1234-5678
                                    </div>
                                </div>

                                <div class="row">
                                    <label class="col-sm-5 text-right">Email</label>
                                    <div class="col-sm-7">
                                        fulano@tal.com
                                    </div>
                                </div>

                            </div>

                            <p>&nbsp;</p>
                            <p class="lead">Produtos</p>

                            <div class="col-md-12">

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nome</th>
                                            <th>Qtd.</th>
                                            <th>Valor</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3">Total</td>
                                            <td>R$ 1.200,00</td>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <tr>
                                            <td>01</td>
                                            <td>Battlefield 4</td>
                                            <td>05</td>
                                            <td>R$ 1.200,00</td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>

                        </div>

                    </div>

                    <div class="col-md-6">

                        <p class="lead pull-left">Histórico</p>
                        <a class="pull-right btn btn-warning" href="#modal-add-log" data-toggle="modal">Adicionar</a>
                        <div class="clearfix"></div>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Data</th>
                                    <th>Ocorrido    </th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>21/11/2013 13:33:22</td>
                                    <td>Compra Realizada</td>
                                    <td>Completo</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <hr>

            </div>
        </div>

        <div id="modal-add-log" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Adicionar Interação</h4>
                    </div>

                    <form role="form">
                        <div class="modal-body">

                            <div class="form-group">
                                <label for="log-item">Ocorrido</label>
                                <input type="text" class="form-control" id="log-item" placeholder="Ex: Enviado para cliente">
                            </div>

                            <div class="form-group">
                                <label for="log-status">Status</label>
                                <input type="text" class="form-control" id="log-status" placeholder="Ex: Completo">
                            </div>

                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                            <button type="button" class="btn btn-primary">Adicionar</button>
                        </div>
                    </form>

                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="/static/js/scripts_admin.js"></script>
    </body>
</html>
