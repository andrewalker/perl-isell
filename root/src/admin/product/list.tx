<!doctype html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8">
        <title>Produtos - iSell</title>

        <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/static/css/style_admin.css">
    </head>
    <body>

        <div id="header">
            <div class="container">
                <div id="logo" class="pull-left">
                    <span class="lead">iSell</span>
                </div>
                <div id="user" class="pull-right">
                  <a href="#" class="btn btn-danger"><span class="glyphicon glyphicon-off"></span> Logout</a>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div id="menu">
            <div class="container">

                <ul class="nav nav-pills">
                    <li><a href="/admin/">Vendas</a></li>
                    <li><a href="/admin/client/list">Clientes</a></li>
                    <li><a href="/admin/product/categories">Categorias</a></li>
                    <li><a class="active" href="/admin/product/list">Produtos</a></li>
                </ul>

            </div>
        </div>

        <div id="content">
            <div class="container">

                <div class="filters">
                    <div class="row">
                        <form class="form-inline" role="form">
                            <div class="col-md-6">
                                <label for="product">Procurar Produtos</label><br>
                                <div class="form-group">
                                    <input type="text" id="product" name="product" class="form-control filters-input-large" placeholder="Digite um ID ou nome">
                                </div>
                                <button type="submit" class="btn btn-warning">Buscar</button>
                            </div>

                            <div class="col-md-2 col-md-offset-2">
                                <label for="product-category">Categoria</label><br>
                                <div class="form-group">
                                    <select id="product-category" class="form-control filters-select">
                                        <option value="jogos">Jogos</option>
                                        <option value="cds">CDs</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <label for="client-orderby">Ordenação</label><br>
                                <div class="form-group">
                                    <select id="client-orderby" class="form-control filters-select">
                                        <option value="id">ID</option>
                                        <option value="name">Nome</option>
                                        <option value="category">Categoria</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="width:5%;">ID</th>
                            <th style="width:40%;">Nome</th>
                            <th style="width:30%;">Categorias</th>
                            <th style="width:15%;">Compras</th>
                            <th style="width:10%;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>01001</td>
                            <td>Battlefield 4</td>
                            <td>Jogos, CDs</td>
                            <td>50</td>
                            <td>
                                <a href="add_product.html"><span class="glyphicon glyphicon-pencil"></span></a>
                                <a href="#"><span class="glyphicon glyphicon-trash"></span></a>
                            </td>
                        </tr>
                    </tbody>

                </table>

                <ul class="pagination">
                    <li><a href="#">&laquo;</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">&raquo;</a></li>
                </ul>

            </div>
        </div>


        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="/static/js/scripts_admin.js"></script>
    </body>
</html>
